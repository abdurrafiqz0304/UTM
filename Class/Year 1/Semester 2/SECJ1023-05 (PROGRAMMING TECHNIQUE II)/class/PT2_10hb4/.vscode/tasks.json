{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "single_file_console_build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${fileBasename}",
                "-o",
                "${fileBasenameNoExtension}",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "single_file_graphic_build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${fileBasename}",
                "-o",
                "${fileBasenameNoExtension}",
                "-lbgi",
                "-lgdi32",
                "-lcomdlg32",
                "-luuid",
                "-loleaut32",
                "-lole32"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "multi_file_console_build",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "& { g++ -g $(Get-ChildItem -Recurse -Filter *.cpp -Path src | ForEach-Object { $_.FullName }) -o ${workspaceFolderBasename}}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "multi_file_graphic_build",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "& { g++ -g $(Get-ChildItem -Recurse -Filter *.cpp -Path src | ForEach-Object { $_.FullName }) -o ${workspaceFolderBasename}  -lbgi -lgdi32 -lcomdlg32 -luuid -loleaut32  -lole32 }"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        }
    ]
}